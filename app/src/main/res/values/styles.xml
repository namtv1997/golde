<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoTitle" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TransparentStatusBar" parent="NoTitle">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="FullScreen" parent="NoTitle">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ImagePickerTheme" parent="ef_BaseTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabBackground">@drawable/seletor_background_tabbar</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/colorPrimary</item>
        <item name="tabGravity">fill</item>
        <item name="tabPaddingStart">@dimen/_8sdp</item>
        <item name="tabPaddingEnd">@dimen/_8sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
        <item name="android:textSize">12sp</item>

    </style>

    <style name="AppTabLayoutNotify" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabGravity">fill</item>
        <item name="tabPaddingStart">@dimen/_8sdp</item>
        <item name="tabPaddingEnd">@dimen/_8sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>

    </style>

    <style name="TextTitleNomal" parent="TextView">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="TextTitleSmall" parent="TextView">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="TextContentSmall">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/primaryTextColor</item>

    </style>
</resources>
