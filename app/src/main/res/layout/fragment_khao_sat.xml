<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:scaleType="centerCrop"
            android:src="@drawable/background_khao_sat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="0dp"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:clickable="true">

        <RelativeLayout
                android:id="@+id/view_title"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize">

            <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:src="@drawable/ic_back_white"/>

        </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:paddingTop="@dimen/_24sdp"
                    android:textSize="@dimen/_24sdp"
                    android:text="@string/y_kien_cua_ban"
                    android:paddingStart="@dimen/_23sdp"
                    android:layout_marginBottom="@dimen/_16sdp"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp"
                    android:paddingTop="@dimen/_16sdp"
                    android:paddingBottom="@dimen/_64sdp"
                    android:text="@string/khaosat_infor"
                    android:paddingStart="@dimen/_23sdp"/>

            <Button
                    android:id="@+id/btn_next"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_42sdp"
                    android:background="@drawable/bg_button_white"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:text="Bắt đầu khảo sát"
                    android:gravity="center"
                    android:fontFamily="@font/segoeui"
                    android:elevation="@dimen/_2sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_above="@id/btn_register"
                    android:layout_marginTop="@dimen/_32sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_gravity="center_horizontal"/>


        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
