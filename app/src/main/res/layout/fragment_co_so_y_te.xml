<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/white"
        android:focusable="true"
        android:clickable="true"
>
    <RelativeLayout
            android:id="@+id/view_title"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/white">

        <ImageView
                android:id="@+id/btn_back"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_4sdp"
                android:src="@drawable/ic_left_arrow_sign"/>


        <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/segoeui"
                android:textSize="20sp"
                android:text="@string/contact"
                android:layout_centerInParent="true"/>

    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/grey"
    />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_16sdp"
        >

            <EditText
                    android:id="@+id/edt_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edt_white"
                    android:textSize="16sp"
                    android:fontFamily="@font/segoeui"
                    android:padding="@dimen/_8sdp"
                    android:drawableLeft="@drawable/ic_search_black_24dp"
                    android:hint="CSYT"
                    android:elevation="@dimen/_4sdp"
                    android:layout_margin="@dimen/_8sdp"
            />

            <android.support.v7.widget.CardView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    android:layout_margin="@dimen/_8sdp"
                    android:layout_gravity="center"
            >

                <ImageView
                        android:id="@+id/img_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/image_logo"
                />
            </android.support.v7.widget.CardView>

            <TextView
                    android:id="@+id/txt_ten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:fontFamily="@font/segoeui"
                    android:text=""
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
            />

            <TextView
                    android:id="@+id/txt_dia_chi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/segoeui"
                    android:text=""
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_16sdp"
            >

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_24sdp"
                >

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                    >

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:fontFamily="@font/segoeui"
                                android:text="5"
                        />

                        <ImageView
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="@dimen/_24sdp"
                                android:src="@drawable/ic_star"
                                android:layout_marginLeft="@dimen/_4sdp"
                        />

                        <View
                                android:id="@+id/view_5_sao"
                                android:layout_width="@dimen/_4sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:background="@drawable/bg_primary"
                                android:layout_marginLeft="@dimen/_4sdp"
                        />

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                    >

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:fontFamily="@font/segoeui"
                                android:text="4"
                        />

                        <ImageView
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="@dimen/_24sdp"
                                android:src="@drawable/ic_star"
                                android:layout_marginLeft="@dimen/_4sdp"
                        />

                        <View
                                android:id="@+id/view_4_sao"
                                android:layout_width="@dimen/_4sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:background="@drawable/bg_primary"
                                android:layout_marginLeft="@dimen/_4sdp"
                        />

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                    >

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:fontFamily="@font/segoeui"
                                android:text="3"
                        />

                        <ImageView
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="@dimen/_24sdp"
                                android:src="@drawable/ic_star"
                                android:layout_marginLeft="@dimen/_4sdp"
                        />

                        <View
                                android:id="@+id/view_3_sao"
                                android:layout_width="@dimen/_4sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:background="@drawable/bg_primary"
                                android:layout_marginLeft="@dimen/_4sdp"
                        />

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                    >

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:fontFamily="@font/segoeui"
                                android:text="2"
                        />

                        <ImageView
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="@dimen/_24sdp"
                                android:src="@drawable/ic_star"
                                android:layout_marginLeft="@dimen/_4sdp"
                        />

                        <View
                                android:id="@+id/view_2_sao"
                                android:layout_width="@dimen/_4sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:background="@drawable/bg_primary"
                                android:layout_marginLeft="@dimen/_4sdp"
                        />

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                    >

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:fontFamily="@font/segoeui"
                                android:text="1"
                        />

                        <ImageView
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="@dimen/_24sdp"
                                android:src="@drawable/ic_star"
                                android:layout_marginLeft="@dimen/_4sdp"
                        />

                        <View
                                android:id="@+id/view_1_sao"
                                android:layout_width="@dimen/_4sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:background="@drawable/bg_primary"
                                android:layout_marginLeft="@dimen/_4sdp"
                        />

                    </LinearLayout>

                    <View
                            android:id="@+id/view_sao"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_18sdp"
                    />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                >

                    <TextView
                            android:id="@+id/txt_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/colorPrimary"
                            android:textSize="90sp"
                            android:fontFamily="@font/segoeui"
                            android:text="0.0"
                    />

                    <RatingBar
                            android:id="@+id/rating_bar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style = "?android:attr/ratingBarStyleSmall"
                            android:rating="5"
                            android:numStars="5"
                            android:scaleY="1.25"
                            android:scaleX="1.25"
                    />

                    <TextView
                            android:id="@+id/txt_so_luong_danh_gia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp"
                            android:fontFamily="@font/segoeui"
                            android:text="Đánh giá"
                            android:layout_marginTop="@dimen/_8sdp"
                    />

                    <TextView
                            android:id="@+id/btn_chi_duong"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:fontFamily="@font/segoeui"
                            android:textSize="18sp"
                            android:text="@string/chi_duong"
                            android:background="@drawable/bg_blue"
                            android:padding="@dimen/_4sdp"
                            android:drawableLeft="@drawable/ic_chi_duong"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_8sdp"
                    />
                </LinearLayout>

            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/grey"
                    android:layout_marginTop="@dimen/_16sdp"
            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/trang_web"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                />

                <TextView
                        android:id="@+id/txt_trang_web"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/black"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:text=""
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/hot_line"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                />

                <TextView
                        android:id="@+id/txt_hotline"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/black"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:text=""
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/email"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                />

                <TextView
                        android:id="@+id/txt_email"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/black"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:text=""
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/gio_lam_viec"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                />

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/black"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:text=""
                        android:id="@+id/txt_gio_lam_viec"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/chuyen_khoa"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                />

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/black"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:text=""
                        android:id="@+id/txt_chuyen_khoa"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/kinh_nghiem"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                />

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/black"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:text=""
                        android:id="@+id/txt_kinh_nghiem"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/thanh_tich"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                />

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/black"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:text=""
                        android:id="@+id/txt_thanh_tich"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/colorPrimary"
                        android:text="Chi tiết"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                />

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/black"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_8sdp"

                        android:id="@+id/txt_chi_tiet"/>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcv_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    tools:listitem="@layout/item_image"
                    android:layout_marginTop="@dimen/_16sdp"
            />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/grey"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:fontFamily="@font/segoeui"
                    android:text="Nhận xét, đánh giá"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
            />

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvc_nhan_xet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/item_nhan_xet"
                    android:layout_marginTop="@dimen/_16sdp"
            >
            </android.support.v7.widget.RecyclerView>

            <TextView
                    android:id="@+id/btn_xem_them"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:fontFamily="@font/segoeui"
                    android:text="Xem thêm 5 đánh giá"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:visibility="gone"
            />

            <RatingBar
                    android:id="@+id/rating_bar_nhan_xet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style = "?android:attr/ratingBarStyleSmall"
                    android:numStars="5"
                    android:scaleY="2"
                    android:scaleX="2"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_8sdp"
                    android:isIndicator="false"
            />

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                        android:id="@+id/edt_nhan_xet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edt_white_stroke"
                        android:gravity="left"
                        android:lines="5"
                        android:hint="Thêm ý kiến"
                        android:padding="@dimen/_8sdp"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/segoeui"
                        android:layout_margin="@dimen/_8sdp"
                />

                <ImageButton
                        android:id="@+id/btn_send"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/ic_send"
                        android:layout_alignParentRight="true"
                        android:layout_alignBottom="@id/edt_nhan_xet"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:background="@color/white"
                />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>