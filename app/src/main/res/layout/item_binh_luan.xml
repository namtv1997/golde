<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingRight="@dimen/_8sdp"
        android:paddingTop="@dimen/_4sdp"
        android:paddingBottom="@dimen/_4sdp"
>
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_avatar"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_avatar"
            android:layout_marginRight="@dimen/_8sdp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/colorPrimary"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_button_grey"
            android:padding="@dimen/_8sdp"
    >

        <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/segoe_ui_semi_bold"
                android:text="Nguyen Van A"
                android:textStyle="bold"
        />

        <TextView
                android:id="@+id/txt_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="segoeui"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="Cái nôi của kinh tế thị trường bị sứt mẻ khá nhiều do chiến dịch cải tạo công thương nghiệp trong cuối thập niên 1970. Khu vực kinh tế tư nhân tiếp tục bị bầm dập vào giữa thập niên 1990 khi các vụ án kinh tế bị hình sự hoá và xử rất nặng. "
        />

        <RelativeLayout
                android:id="@+id/view_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginTop="@dimen/_8sdp">

            <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_logo"
            />

            <TextView
                    android:id="@+id/txt_number_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/greyTransparent"
                    android:text="+2"
                    android:textColor="@color/white"
                    android:fontFamily="@font/segoe_ui_semi_bold"
                    android:textSize="56sp"
                    android:gravity="center"
                    android:visibility="gone"
            />
        </RelativeLayout>

        <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="segoeui"
                android:text="11/11/2019 15:30"
                android:layout_marginTop="@dimen/_4sdp"
        />
    </LinearLayout>

</LinearLayout>