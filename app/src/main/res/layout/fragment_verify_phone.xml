<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background"
        android:focusable="true"
        android:clickable="true"
>
    <RelativeLayout
            android:id="@+id/view_title"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/white">

        <ImageView
                android:id="@+id/btn_back"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_4sdp"
                android:src="@drawable/ic_left_arrow_sign"/>


        <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/segoeui"
                android:textSize="20sp"
                android:text="@string/register"
                android:layout_centerInParent="true"/>

    </RelativeLayout>

    <ImageView
            android:id="@+id/img_logo"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:src="@drawable/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_32sdp"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/segoeui"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="@string/Nhap_ma_xac_thuc_duoc_gui_ve_sdt"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:gravity="center"
            android:layout_gravity="center"
    />

    <EditText
            android:id="@+id/edt_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_32sdp"
            android:layout_marginRight="@dimen/_32sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:hint="@string/ma_xac_thuc"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/segoeui"
            android:textSize="16sp"
            android:maxLines="1"
            android:inputType="text"
            android:layout_marginTop="@dimen/_16sdp"
    />

    <TextView
            android:id="@+id/btn_send_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/segoeui"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="@string/send_again"
            android:layout_gravity="center"
    />

    <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_42sdp"
            android:background="@drawable/bg_button_primary"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="@string/confirm"
            android:gravity="center"
            android:fontFamily="@font/segoeui"
            android:elevation="@dimen/_2sdp"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/btn_register"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_gravity="center_horizontal"
    />

    <TextView
            android:id="@+id/btn_phone_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/segoeui"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="@string/nham_sdt"
            android:layout_gravity="center"
    />

    <TextView
            android:id="@+id/btn_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/segoeui"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="@string/goi_lai_bang_so_di_dong"
            android:layout_gravity="center"
    />

</LinearLayout>