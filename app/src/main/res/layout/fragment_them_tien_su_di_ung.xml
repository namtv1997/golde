<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background"
        android:focusable="true"
        android:clickable="true"
>
    <RelativeLayout
            android:id="@+id/view_title"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/white">

        <ImageView
                android:id="@+id/btn_back"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_4sdp"
                android:src="@drawable/ic_left_arrow_sign"/>


        <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/segoeui"
                android:textSize="20sp"
                android:text="@string/them_tien_su_di_ung"
                android:layout_centerInParent="true"/>

        <ImageView
                android:id="@+id/btn_done"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_4sdp"
                android:src="@drawable/ic_check"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeui"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="@string/loai_di_ung"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
    />

    <TextView
            android:id="@+id/txt_loai_di_ung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edt_white_stroke"
            android:padding="@dimen/_8sdp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/segoeui"
            android:layout_margin="@dimen/_8sdp"
            android:drawableRight="@drawable/ic_keyboard_arrow_down"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeui"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="@string/nguoi_mac"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
    />

    <TextView
            android:id="@+id/txt_nguoi_mac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edt_white_stroke"
            android:padding="@dimen/_8sdp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/segoeui"
            android:layout_margin="@dimen/_8sdp"
            android:inputType="number"
            android:drawableRight="@drawable/ic_keyboard_arrow_down"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeui"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="@string/mo_ta"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
    />

    <EditText
            android:id="@+id/edt_mo_ta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edt_white_stroke"
            android:padding="@dimen/_8sdp"
            android:textSize="16sp"
            android:lines="3"
            android:textColor="@color/black"
            android:fontFamily="@font/segoeui"
            android:layout_margin="@dimen/_8sdp"
    />

</LinearLayout>