<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:clickable="true"
              android:focusable="true"
>

    <RelativeLayout
            android:id="@+id/view_title"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/white">

        <ImageView
                android:id="@+id/btn_back"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_4sdp"
                android:src="@drawable/ic_left_arrow_sign"/>

        <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/segoeui"
                android:textSize="20sp"
                android:text="@string/sua_thong_tin"
                android:layout_centerInParent="true"/>

        <ImageView
                android:id="@+id/btn_update"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_4sdp"
                android:src="@drawable/ic_check"
                android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/background"
    />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_8sdp"
        >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_8sdp"
            >

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/ten"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textEnd"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:drawableRight="@drawable/asset1"
                />

                <EditText
                        android:id="@+id/edt_ho_ten"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/black"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:inputType="textCapWords"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_4sdp"
            >

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/colorPrimary"
                        android:text="Giới tính"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textEnd"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:drawableRight="@drawable/asset1"
                />

                <RadioGroup
                        android:id="@+id/rg_gioi_tinh"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                >

                    <RadioButton
                            android:id="@+id/rb_nam"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:button="@drawable/selector_checkbox_3"
                            android:text="Nam"
                            android:textSize="16sp"
                            android:fontFamily="@font/segoeui"
                            android:paddingLeft="@dimen/_8sdp"
                            android:checked="true"
                    />

                    <RadioButton
                            android:id="@+id/rb_nu"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:button="@drawable/selector_checkbox_3"
                            android:text="Nữ"
                            android:textSize="16sp"
                            android:fontFamily="@font/segoeui"
                            android:paddingLeft="@dimen/_8sdp"
                    />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_4sdp"
            >

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/ngay_sinh"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textEnd"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:drawableRight="@drawable/asset1"
                />

                <EditText
                        android:id="@+id/btn_ngay_sinh"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/black"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:editable="false"
                        android:focusable="false"
                        android:drawableRight="@drawable/ic_arrow_drop_down_24dp"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_4sdp"
            >

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/phone"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textEnd"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:drawableRight="@drawable/asset1"
                />

                <EditText
                        android:id="@+id/edt_phone"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/black"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:inputType="phone"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_4sdp"
            >

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/email"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textEnd"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:drawableRight="@drawable/asset1"
                />

                <EditText
                        android:id="@+id/edt_email"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/black"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:inputType="textEmailAddress"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_4sdp"
            >

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/colorPrimary"
                        android:text="Ngôn ngữ"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textEnd"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:drawableRight="@drawable/asset1"
                />

                <EditText
                        android:id="@+id/btn_ngon_ngu"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/black"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:editable="false"
                        android:focusable="false"
                        android:drawableRight="@drawable/ic_arrow_drop_down_24dp"
                />
            </LinearLayout>

            <TextView
                    android:id="@+id/btn_save"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_42sdp"
                    android:background="@drawable/bg_button_primary"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="@string/save"
                    android:gravity="center"
                    android:fontFamily="@font/segoeui"
                    android:elevation="@dimen/_2sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_above="@id/btn_register"
                    android:layout_marginTop="@dimen/_32sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:layout_gravity="right"
            />

        </LinearLayout>

    </ScrollView>

</LinearLayout>