<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/white"
        android:focusable="true"
        android:clickable="true"
>
    <RelativeLayout
            android:id="@+id/view_title"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/white">

        <ImageView
                android:id="@+id/btn_back"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_4sdp"
                android:src="@drawable/ic_left_arrow_sign"/>


        <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/segoeui"
                android:textSize="20sp"
                android:text="@string/cap_nhat"
                android:layout_centerInParent="true"/>

        <ImageView
                android:id="@+id/btn_save"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_4sdp"
                android:src="@drawable/ic_check"
                android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/grey"
    />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_16sdp"
        >

            <ImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:background="@drawable/bg_image"
                    android:src="@drawable/image_logo"
            />


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/ten_csyt"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                />

                <EditText
                        android:id="@+id/edt_ten"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/black"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:inputType="text"
                        android:drawableRight="@drawable/ic_edit_pencil"
                        android:drawablePadding="@dimen/_4sdp"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/dia_chi"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                />

                <EditText
                        android:id="@+id/edt_dia_chi"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/black"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:inputType="text"
                        android:drawableRight="@drawable/ic_edit_pencil"
                        android:drawablePadding="@dimen/_4sdp"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/trang_web"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                />

                <EditText
                        android:id="@+id/edt_trang_web"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/black"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:inputType="text"
                        android:drawableRight="@drawable/ic_edit_pencil"
                        android:drawablePadding="@dimen/_4sdp"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/hot_line"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                />

                <EditText
                        android:id="@+id/edt_hotline"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/black"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:drawableRight="@drawable/ic_edit_pencil"
                        android:drawablePadding="@dimen/_4sdp"
                        android:inputType="phone"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/email"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                />

                <EditText
                        android:id="@+id/edt_email"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/black"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:drawableRight="@drawable/ic_edit_pencil"
                        android:drawablePadding="@dimen/_4sdp"
                        android:inputType="textEmailAddress"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/gio_lam_viec"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                />

                <EditText
                        android:id="@+id/edt_gio_lam_viec"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/black"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:drawableRight="@drawable/ic_edit_pencil"
                        android:drawablePadding="@dimen/_4sdp"
                        android:inputType="text"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/chuyen_khoa"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                />

                <EditText
                        android:id="@+id/edt_chuyen_khoa"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/black"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:drawableRight="@drawable/ic_edit_pencil"
                        android:drawablePadding="@dimen/_4sdp"
                        android:inputType="text"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/kinh_nghiem"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                />

                <EditText
                        android:id="@+id/edt_kinh_nghiem"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/black"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:drawableRight="@drawable/ic_edit_pencil"
                        android:drawablePadding="@dimen/_4sdp"
                        android:inputType="text"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/thanh_tich"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                />

                <EditText
                        android:id="@+id/edt_thanh_tich"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/black"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:drawableRight="@drawable/ic_edit_pencil"
                        android:drawablePadding="@dimen/_4sdp"
                        android:inputType="text"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/colorPrimary"
                        android:text="Chi tiết"
                        android:padding="@dimen/_4sdp"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                />

                          </LinearLayout>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcv_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    tools:listitem="@layout/item_image"
                    android:layout_marginTop="@dimen/_8sdp"
            />

        </LinearLayout>

    </ScrollView>
</LinearLayout>